= form_for @note do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :project_name
    = f.collection_select :project_name, current_user.repositories, :name, :name
  .git-file-name
  .bitbucket-file-name
  .actions
    = f.submit 'Save'
